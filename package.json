{
  "name": "betterself",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6",
    "turbo": "^2.1.0",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["react-dom"]
    }
  }
}